@import "../../common/index.wxss";

.container-box {
  background-color: #ffffff;
  height: 100vh;
}
.list-box {
  background-color: #0d70ff;
  color: #fff;
  width: 90vw;
  margin: 3vw;
  padding: 2vw;
}

.text-no-room {
  font-size: 15px;
  color: #999;
  padding: 2vw 5vw;
  padding-top: 30vh;
  text-align: center;
}

.text-has-room {
  font-size: 12px;
  color: #999;
  text-align: center;
  padding: 4vw 5vw;
}

.bottom-btn {
  position: fixed;
  width: 26vw;
  right: 5vw;
  bottom: 3vh;
}

.bottom-input {
  padding:0 1vw;
  position: fixed;
  width: 60vw;
  left: 5vw;
  bottom: 3vh;
  background-color: rgba(204, 204, 204, 0.5);
  height: 9.4vw;
  border-radius: 4px;
  color: #3c3c3c;
}

.bottom-input input {
  height: 9.4vw;
}

.bottom-btn button {
   background-color: rgba(13, 112, 255, 0.8);
   line-height: 2.3em;
}

.navigator-text {
  font-size: 16px;
}

.create-button {
  font-size: 16px;
  color: white;
}